---
import LinkWrap from '../components/LinkWrap.astro';

import GithubIcon from '../icons/GithubIcon.astro';
import LinkedInIcon from '../icons/LinkedInIcon.astro';
import EmailIcon from '../icons/EmailIcon.astro';
---

<ul class="flex items-center justify-center gap-x-4 py-4">
  <li>
    <LinkWrap href="https://github.com/HectorAlrz" label="Github">
      <GithubIcon class="size-6 hover:fill-indigo-300 hover:scale-150 rounded-full transition-all duration-300" />
    </LinkWrap>
  </li>
  <li>
    <LinkWrap href="https://www.linkedin.com/in/healcaraz/?locale=en_US" label="LinkedIn">
      <LinkedInIcon class="size-6 hover:stroke-indigo-300 hover:scale-150 transition-all duration-300" />
    </LinkWrap>
  </li>
  <li>
    <LinkWrap href="#email" label="gmail">
      <EmailIcon class="size-6 hover:stroke-indigo-300 hover:scale-150 transition-all duration-300" />
    </LinkWrap>
  </li>
</ul>

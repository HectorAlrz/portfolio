---
import Avatar from "./Avatar.astro";
import BurgerButton from "./BurgerButton.astro";
import DesktopNavbar from "./navbar/DesktopNavbar.astro";
import MobileNavbar from "./navbar/MobileNavbar.astro";
import WorkBadge from "./WorkBadge.astro";


const now = new Date();

const utcHours = now.getUTCHours();
const utcMinutes = now.getUTCMinutes();
const gmt6Hours = (utcHours - 6 + 24) % 24;

const hours = gmt6Hours.toString().padStart(2, '0');
const minutes = utcMinutes.toString().padStart(2, '0');

const formattedTime = `${hours}:${minutes} GMT-6`;
---

<header class="sticky top-0 backdrop-blur-sm z-50 header">
  <div class="px-4 py-4 mx-auto max-w-[1120px] w-full">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-x-4 pl-4">
        <Avatar />
        <WorkBadge />
      </div>
        <p class="time sm:invisible md:visible text-sm">
          {formattedTime}
        </p>
      <DesktopNavbar />
      <BurgerButton />
    </div>
  </div>
  <MobileNavbar />
</header>

<script>
  const menuButton = document.getElementById("menu-toggle");
  const mobileMenu = document.getElementById("mobile-menu");
  const sidebarLinks = mobileMenu?.querySelectorAll("a");
  
  if (menuButton && mobileMenu) {
    menuButton.addEventListener("click", () => {
      const isExpanded = menuButton.getAttribute("aria-expanded") === "true";
      menuButton.setAttribute("aria-expanded", String(!isExpanded));
      
      mobileMenu.classList.toggle("hidden");
      mobileMenu.classList.toggle("-translate-x-full");
      mobileMenu.classList.toggle("translate-x-0"); 
    })
  };

  if (sidebarLinks) {
    sidebarLinks.forEach((link) => {
      link.addEventListener("click", (event) => {
        event.preventDefault();
        const isExpanded = menuButton?.getAttribute("aria-expanded") === "true";
        menuButton?.setAttribute("aria-expanded", String(!isExpanded));
        mobileMenu?.classList.toggle("hidden");
        mobileMenu?.classList.toggle("-translate-x-full");
        mobileMenu?.classList.toggle("translate-x-0");
        window.location.href = link.href; 
      })
    })
  };

  document.addEventListener("click", (event) => {
    const isMenuOpen = menuButton?.getAttribute("aria-expanded") === "true";

    if (isMenuOpen && mobileMenu && !mobileMenu.contains(event.target) && !menuButton.contains(event.target)) {
      menuButton?.setAttribute("aria-expanded", "false");
      mobileMenu.classList.add("hidden");
      mobileMenu.classList.add("-translate-x-full");
      mobileMenu.classList.remove("translate-x-0");
    }
  });

  const header = document.querySelector(".header");
  window.addEventListener("scroll", () => {
    if (window.scrollY > 0) {
      header?.classList.add("border-b", "border-gray-600");
    } else {
      header?.classList.remove("border-b", "border-gray-600");
    }
  });
</script>

<style>
  .header {
    transition: border-bottom 0.3s ease-in-out;
    /* background: rgba(120, 119, 198, 0.3); */
  }
</style>

---
import "../portfolio.css";
import ContactItems from "../../components/ContactItems.astro";
import Experience from "../../components/Experience/Experience.astro";
import Layout from "../../layouts/Layout.astro";
import SectionContainer from "../../components/common/SectionContainer.astro";
import SkeletonProyect from "../../components/common/SkeletonProyect.astro";
import CodeIcon from "../../icons/CodeIcon.astro";
import { TAGS } from "../../helpers/projectHelper";
---

<Layout>
  <main class="relative px-4 sm:px-8 lg:px-16" transition:animate="initial">
    <SectionContainer
      className="flex flex-col items-center py-16 sm:py-32 lg:py-44"
    >
      <h1
        id="about"
        class="flex flex-row justify-center text-white text-3xl sm:text-4xl lg:text-5xl font-bold gap-x-4 pb-4"
      >
        Hello there!, I'm HÃ©ctor
      </h1>
      <p class="text-2xl opacity-80 text-pretty text-center text-white">
        Highly motivated <span class="cyberpunk-text">front-end developer</span>
        with 2+ years of experience specializing in modernizing and optimizing web
        applications and driven by a commitment to continuous learning and innovation
        <span class="block">From Xalapa, Mexico.</span>
      </p>
      <ContactItems />
    </SectionContainer>

    <SectionContainer className="py-16 sm:py-32 lg:py-44 sm:items-center">
      <h2
        id="experience"
        class="text-white pb-6 font-bold font-heading leading-tighter tracking-tighter text-heading
          text-3xl lg:text-4xl pb-4 flex justify-center lg:justify-start"
      >
        Work Experience
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer className="py-16 sm:py-32 lg:py-44">
      <div class="flex items-center pb-4 justify-center lg:justify-start">
          <CodeIcon class="size-7 mr-4 text-white" />
          <h2
            id="projects"
            class="text-white font-bold font-heading leading-tighter tracking-tighter text-heading
            text-3xl lg:text-4xl"
          >
            Projects
          </h2>
      </div>
      <p class="text-white text-pretty opacity-80 pb-4 text-center lg:text-start">Coming soon...</p>
      <div class="flex justify-center flex-wrap gap-8 pt-4">
        <SkeletonProyect />
        <SkeletonProyect />
      </div>
    </SectionContainer>

    <SectionContainer className="py-16 sm:py-32 lg:py-44">
      <div class="flex items-center justify-center lg:justify-start">
        <h2
          id="stack"
          class="text-white pb-6 font-bold font-heading leading-tighter tracking-tighter text-heading
        text-3xl lg:text-4xl"
        >
          Stack
        </h2>
      </div>
      <div
        class="icons bg-black/30 blackdrop-blur-md flex flex-wrap justify-center sm:justify-start gap-4 sm:gap-8 p-4"
      >
        {
          Object.entries(TAGS).map(([key, value]) => (
            <div id={key}
              class="flex items-center gap-2 cursor-pointer hover:scale-150 transition-all duration-300 text-sm sm:text-base"
            >
              {<value.icon class="size-8" />}
              <span class="text-slate-200">{value.name}</span>
            </div>
          ))
        }
      </div>
    </SectionContainer>
  </main>
</Layout>

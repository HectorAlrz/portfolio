---
import ContactItems from "../../components/ContactItems.astro";
import Experience from "../../components/Experience/Experience.astro";
import Layout from "../../layouts/Layout.astro";
import SectionContainer from "../../components/common/SectionContainer.astro";
import SkeletonProyect from "../../components/common/SkeletonProyect.astro";
import CodeIcon from "../../icons/CodeIcon.astro";
import { TAGS } from "../../helpers/projectHelper";
---

<Layout>
  <main class="relative px-4 sm:px-8 lg:px-16">
    <SectionContainer
      className="flex flex-col items-center py-16 sm:py-32 lg:py-44"
    >
      <h1
        class="flex flex-row justify-center text-white text-3xl sm:text-4xl lg:text-5xl font-bold gap-x-4 pb-4"
      >
        Hello there!, I'm HÃ©ctor
      </h1>
      <p class="text-2xl opacity-80 text-pretty text-center">
        Highly motivated <span class="cyberpunk-text">front-end developer</span>
        with 2+ years of experience specializing in modernizing and optimizing web
        applications and driven by a commitment to continuous learning and innovation
        <span class="block">From Xalapa, Mexico.</span>
      </p>
      <ContactItems />
    </SectionContainer>

    <SectionContainer className="py-16 sm:py-32 lg:py-44 sm:items-center">
      <h2
        class="pb-6 font-bold font-heading leading-tighter tracking-tighter text-heading
          text-3xl lg:text-4xl pb-4 flex justify-center lg:justify-start"
      >
        Work Experience
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer client:load className="py-16 sm:py-32 lg:py-44">
      <div class="flex items-center pb-4 justify-center lg:justify-start">
        <CodeIcon class="size-7 mr-4" />
        <h2
          class="font-bold font-heading leading-tighter tracking-tighter text-heading
            text-3xl lg:text-4xl"
        >
          Projects
        </h2>
      </div>
      <p class="text-pretty opacity-80 pb-4">Coming soon...</p>
      <div class="flex justify-center flex-wrap gap-8 pt-4">
        <SkeletonProyect />
        <SkeletonProyect />
      </div>
    </SectionContainer>

    <SectionContainer className="py-16 sm:py-32 lg:py-44">
      <h2
      class="pb-6 font-bold font-heading leading-tighter tracking-tighter text-heading
        text-3xl lg:text-4xl"
    >
      Stack
    </h2>
      <div class="icons bg-black/30 blackdrop-blur-md flex justify-space-between flex-wrap gap-8">
        {
          Object.entries(TAGS).map(([key, value]) => (
            <div
              id={key}
              class="flex items-center gap-2 cursor-pointer hover:scale-150 transition-all duration-300"
            >
              {<value.icon class="size-8" />}
              <span>{value.name}</span>
            </div>
          ))
        }
      </div>
    </SectionContainer>
  </main>
</Layout>

<style is:global>
  .icons {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    flex-direction: row;
    border-radius: 0.313rem;
    padding-top: 1.5rem;
    padding-bottom: 1.5rem;
    border: solid 1px #333232;
  }

  .cyberpunk-text {
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;
    animation:
      gradient-animation 3s ease infinite,
      color-animation 5s ease infinite;
  }

  @keyframes gradient-animation {
    0% {
      background-image: linear-gradient(to right, #0f0, #0ff);
    }
    25% {
      background-image: linear-gradient(to bottom, #0ff, #f0f);
    }
    50% {
      background-image: linear-gradient(to left, #f0f, #ff0);
    }
    75% {
      background-image: linear-gradient(to top, #ff0, #f00);
    }
    100% {
      background-image: linear-gradient(to right, #f00, #0f0);
    }
  }

  @keyframes color-animation {
    0% {
      color: #0f0;
    }
    25% {
      color: #0ff;
    }
    50% {
      color: #f0f;
    }
    75% {
      color: #ff0;
    }
    100% {
      color: #0f0;
    }
  }
</style>
